<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btnMapHome"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_margin="2dp"
                android:contentDescription="@string/api_get_content_fail_no_internet"
                android:scaleType="center"
                android:src="@drawable/mapbutton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnAchievementsHome"
                    android:layout_width="176dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/api_get_content_fail_no_internet"
                    android:scaleType="center"
                    android:src="@drawable/mapbutton" />

                <ImageButton
                    android:id="@+id/btnNotificationsHome"
                    android:layout_width="176dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/api_get_content_fail_no_internet"
                    android:scaleType="center"
                    android:src="@drawable/mapbutton" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnTournamentsHome"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_margin="2dp"
                android:contentDescription="@string/api_get_content_fail_no_internet"
                android:scaleType="center"
                android:src="@drawable/mapbutton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnScheduleHome"
                    android:layout_width="176dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/api_get_content_fail_no_internet"
                    android:scaleType="center"
                    android:src="@drawable/mapbutton" />

                <ImageButton
                    android:id="@+id/btnStreamingHome"
                    android:layout_width="176dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/api_get_content_fail_no_internet"
                    android:scaleType="center"
                    android:src="@drawable/mapbutton" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>